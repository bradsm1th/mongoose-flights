<%- include('../partials/header') %>
  <h2>All Flights</h2>

  <table>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight Number</th>
      <th>Departure Time</th>
      <th></th>
    </tr>
    <tr>
      <% flights.forEach(flight=> { %>
        <td>
          <%= flight.airline %>
        </td>
        <td>
          <%= flight.airport %>
        </td>
        <td>
          <%= flight.flightNo %>
        </td>
        <td>
          <%= flight.departsAt.toLocaleString(); %>
        </td>
        <td><a href="/flights/<%= flight._id%>">More info</a></td>
    </tr>
    <% }) %>
  </table>


  <%- include('../partials/footer') %>