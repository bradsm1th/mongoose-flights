<form action="/flights/<%= idOfFlight %>/tickets" method="POST">
  <label><strong>Seat</strong> <small>(A1–F99)</small>:</label>
  <input name="seat" pattern="[A-F][1-9]\d?">

  <label><strong>Price</strong> <small>(USD)</small>:</label>
  <input name="price" type="number" min="0">

  <button type="submit">Add ticket to this flight</button>
</form>

<p>Flight ID: <%= idOfFlight %></p>

